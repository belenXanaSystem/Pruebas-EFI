<script>
document.getElementById("top").addEventListener("mousemove", function (event) {
    const cards = document.querySelectorAll(".card"); // Seleccionar todas las tarjetas
    cards.forEach((card, index) => {
        // Alternar la dirección de la rotación basada en el índice
        const direction = index % 2 === 0 ? 1 : -1; // Cambiar la dirección para cada tarjeta
        const rotationX = direction * (-(window.innerWidth / 2 - event.pageX) / 30);
        const rotationY = direction * ((window.innerHeight / 2 - event.pageY) / 10);
        (card as HTMLElement).style.transform = `rotateY(${rotationX}deg) rotateX(${rotationY}deg)`;
    });
});

</script>

